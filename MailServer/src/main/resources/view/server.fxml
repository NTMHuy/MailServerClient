<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="server.ui.ServerController"
            prefWidth="1000"
            prefHeight="600">

    <!-- ========== SIDEBAR ========== -->
    <left>
        <VBox spacing="20"
              alignment="TOP_CENTER"
              prefWidth="200"
              style="-fx-background-color: #1f6f78; -fx-padding: 20;">

            <Label text="SERVER MAIL"
                   style="-fx-text-fill: #ff6b6b;
                          -fx-font-size: 18px;
                          -fx-font-weight: bold;" />

            <Button text="TRANG CHỦ"
                    prefWidth="160"
                    fx:id="btnHome"/>

            <Button text="NGƯỜI DÙNG"
                    prefWidth="160"
                    fx:id="btnUsers"/>

            <Button text="THOÁT"
                    prefWidth="160"
                    fx:id="btnExit"/>

        </VBox>
    </left>

    <!-- ========== CENTER CONTENT ========== -->
    <center>

        <StackPane fx:id="contentPane">

            <!-- ===== TRANG CHỦ ===== -->
            <VBox fx:id="homePane"
                  spacing="15"
                  style="-fx-padding: 20;"
                  visible="true">

                <!-- STATUS CARDS -->
                <HBox spacing="20">

                    <VBox prefWidth="250"
                          style="-fx-background-color: #2c7a7b;
                                 -fx-padding: 15;
                                 -fx-background-radius: 8;">
                        <Label text="Trạng thái"
                               style="-fx-text-fill: white;
                                      -fx-font-size: 14;" />
                        <Label text="Đang hoạt động"
                               style="-fx-text-fill: #b2f5ea;
                                      -fx-font-size: 16;
                                      -fx-font-weight: bold;" />
                        <Label text="PORT: 1099"
                               style="-fx-text-fill: white;" />
                    </VBox>

                    <VBox prefWidth="250"
                          style="-fx-background-color: #2c7a7b;
                                 -fx-padding: 15;
                                 -fx-background-radius: 8;">
                        <Label text="Số lượng"
                               style="-fx-text-fill: white;
                                      -fx-font-size: 14;" />
                        <Label fx:id="lblOnline"
                               text="0"
                               style="-fx-text-fill: #b2f5ea;
                                      -fx-font-size: 22;
                                      -fx-font-weight: bold;" />
                    </VBox>

                </HBox>

                <!-- LOG -->
                <Label text="Hoạt động hệ thống"
                       style="-fx-font-size: 14;
                              -fx-font-weight: bold;" />

                <ListView fx:id="logList"
                          prefHeight="350"/>

            </VBox>

            <!-- ===== NGƯỜI DÙNG ===== -->
            <VBox fx:id="userPane"
                  spacing="10"
                  style="-fx-padding: 20;"
                  visible="false">

                <Label text="Danh sách người dùng"
                       style="-fx-font-size: 16;
                              -fx-font-weight: bold;" />

                <TableView fx:id="userTable">

                    <columns>
                        <TableColumn fx:id="colId"
                                     text="ID"
                                     prefWidth="60"/>

                        <TableColumn fx:id="colUser"
                                     text="USER"
                                     prefWidth="200"/>

                        <TableColumn fx:id="colPhone"
                                     text="Điện Thoại"
                                     prefWidth="150"/>

                        <TableColumn fx:id="colStatus"
                                     text="Trạng Thái"
                                     prefWidth="120"/>
                    </columns>

                </TableView>

            </VBox>

        </StackPane>

    </center>

</BorderPane>
